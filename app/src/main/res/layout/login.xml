<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:focusableInTouchMode="true"
    android:background="#fff">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/loginLogoImg"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/loginTitleTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/usernameTxt"
                    android:layout_alignStart="@+id/lDismissButt"
                    android:layout_below="@+id/loginLogoImg"
                    android:layout_marginTop="20dp"
                    android:text="Entrar no LyricalApp"
                    android:textAlignment="textStart"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/lDismissButt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/loginTitleTxt"
                    android:layout_alignStart="@+id/usernameTxt"
                    android:background="@android:color/transparent"
                    android:text="Cencelar"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/main_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/usernameTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_below="@+id/loginTitleTxt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/main_color"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textColor="#333"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/passwordTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_below="@+id/usernameTxt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/main_color"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:textAlignment="textStart"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/loginButt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/passwordTxt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/main_color"
                    android:text="Entrar"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/forgotPassButt"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/loginButt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:text="Esqueceu sua senha?"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#333"
                    android:textSize="12sp" />


                <Button
                    android:id="@+id/signUpButt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/forgotPassButt"
                    android:layout_marginTop="50dp"
                    android:background="@android:color/transparent"
                    android:text="Cadastrar com o Email"
                    android:textAllCaps="false"
                    android:textColor="#555"
                    android:textSize="12sp"
                    android:textStyle="normal|bold" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
