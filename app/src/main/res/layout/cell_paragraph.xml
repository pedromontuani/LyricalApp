<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/cpParagraphTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="••••••"
        android:textColor="#333"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/cpLikeButt"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/cpParagraphTxt"
        android:layout_below="@+id/cpCreatedByDateButt"
        android:layout_marginBottom="10dp"
        android:background="@drawable/like_butt"/>

    <TextView
        android:id="@+id/cpParagraphLikesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cpLikeButt"
        android:layout_alignTop="@+id/cpLikeButt"
        android:layout_toEndOf="@+id/cpLikeButt"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="#333"
        android:textSize="11sp"/>

    <Button
        android:id="@+id/cpParagraphOptionsButt"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/cpParagraphTxt"
        android:layout_alignTop="@+id/cpParagraphLikesTxt"
        android:background="@android:color/transparent"
        android:text="•••"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/cpCreatedByDateButt"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/cpParagraphOptionsButt"
        android:layout_below="@+id/cpParagraphTxt"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:text="•••"
        android:textAllCaps="false"
        android:textSize="12sp"/>

</RelativeLayout>